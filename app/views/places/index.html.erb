<% @places.each do |place| %>
  <div class="pretty-box col-xs-10 col-xs-offset-1">
    <h1><%= place.name %></h1><br />
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />
  </div>


<% end %>

<div class="apple_pagination text-center">
<%= will_paginate @places, :page_links => false %>
</div>
